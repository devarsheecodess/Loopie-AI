{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": [
			"DOM",
			"ESNext"
		],
		"jsx": "react-jsx",
		"strict": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"baseUrl": "src",
		"paths": {
			"@/*": [
				"*"
			]
		},
		"types": [
			"react",
			"react-dom"
		]
	},
	"include": [
		"src"
	]
}