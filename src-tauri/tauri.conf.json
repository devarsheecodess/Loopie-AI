{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "loopie",
	"version": "0.1.0",
	"identifier": "com.devar.loopie",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:5173",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "loopie",
				"width": 500,
				"height": 500,
				"alwaysOnTop": true,
				"decorations": false,
				"transparent": true,
				"resizable": true,
				"shadow": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": [
			"msi",
			"appimage"
		],
		"icon": [
			"icons/loopie-logo.png"
		]
	}
}